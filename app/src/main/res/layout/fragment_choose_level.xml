<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.ChooseLevelFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/choose_level"
        android:textSize="30sp" />

    <Button
        android:id="@+id/bt_test_level"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/test"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_easy_level"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="@string/easy"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_normal_level"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="нормальный"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_hard_level"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="@string/hard"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>